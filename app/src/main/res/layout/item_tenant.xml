<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/tenant_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_go" />

        <TextView
            android:id="@+id/tenant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tenant_image"
            android:layout_alignTop="@id/tenant_image"
            android:text="Tenant Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tenant_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenant_name"
            android:layout_toEndOf="@id/tenant_image"
            android:text="Deskripsi Tenant"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/edit_tenant_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenant_description"
            android:layout_toEndOf="@id/tenant_image"
            android:layout_marginTop="8dp"
            android:text="Ubah Data" />

        <Button
            android:id="@+id/delete_tenant_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenant_description"
            android:layout_toEndOf="@id/edit_tenant_button"
            android:layout_marginTop="8dp"
            android:text="Hapus" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
